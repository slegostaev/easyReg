
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index()
GET		/login							controllers.Application.login()
GET		/logout							controllers.Application.logout()
POST	/auth							controllers.Application.auth()


GET     /receptions/js/routes		   	controllers.ReceptionsController.javascriptRoutes()
GET     /receptions/get_all             controllers.ReceptionsController.getAllReceptions()
POST	/receptions/save				controllers.ReceptionsController.saveReception()
DELETE	/receptions/delete				controllers.ReceptionsController.deleteReception(id : Long)

#ajax that return json
GET     /ajax/get_all_doctors           controllers.DoctorsController.getAllDoctorsJSON()

GET     /doctors/js/routes		   		controllers.DoctorsController.javascriptRoutes()
GET     /doctors/list	             	controllers.DoctorsController.listOfDoctors()
GET     /doctors/:id	             	controllers.DoctorsController.edit(id : Long)
GET		/doctors/new					controllers.DoctorsController.create()
POST	/doctors/save					controllers.DoctorsController.save()
DELETE	/doctors/:id/delete				controllers.DoctorsController.delete(id : Long)

GET     /users/js/routes		   		controllers.UsersController.javascriptRoutes()
GET     /users/list	             		controllers.UsersController.listOfUsers()
GET     /users/:id	             		controllers.UsersController.edit(id : Long)
GET		/users/new						controllers.UsersController.create()
POST	/users/save						controllers.UsersController.save()
DELETE	/users/:id/delete				controllers.UsersController.delete(id : Long)

GET		/patient/find_by_name			controllers.PatientsController.findPatientByName(mask : String)
POST	/patient/save					controllers.PatientsController.savePatient()

GET		/settings	controllers.SettingsController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
